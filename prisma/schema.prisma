generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum Role {
  ADMIN
  EDITOR
  ANALYST
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role      @default(EDITOR)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?

  posts         Post[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     Json?    // Structured content for the page
  // SEO Fields
  metaTitle   String?
  metaDesc    String?
  canonical   String?
  index       Boolean  @default(true)
  follow      Boolean  @default(true)
  ogTitle     String?
  ogDesc      String?
  ogImage     String?
  
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HomepageHero {
  id                String   @id @default(cuid())
  headline          String
  subheadline       String?
  ctaPrimaryLabel   String?
  ctaPrimaryUrl     String?
  ctaSecondaryLabel String?
  ctaSecondaryUrl   String?
  badgeText         String?
  backgroundStyle   String?  // "animated-gradient", "static-gradient", "solid"
  updatedAt         DateTime @updatedAt
}

model Redirect {
  id          String   @id @default(cuid())
  sourcePath  String   @unique
  targetPath  String
  type        Int      @default(301) // 301 or 302
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NotFoundLog {
  id          String   @id @default(cuid())
  path        String
  referrer    String?
  count       Int      @default(1)
  lastHitAt   DateTime @default(now())

  @@index([path])
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String?  // Rich text content
  coverImage  String?
  category    String?
  // SEO Fields for Blog
  metaTitle   String?
  metaDesc    String?
  
  published   Boolean  @default(false)
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  status    String   @default("NEW") // NEW, READ, ARCHIVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SeoAnalysis {
  id          String   @id @default(cuid())
  domain      String
  email       String?
  score       Int
  results     Json     // Detailed analysis results
  createdAt   DateTime @default(now())
}

model MarketingTool {
  id        String   @id @default(cuid())
  name      String
  type      String   // ADS, ANALYTICS, SOCIAL
  data      Json?    // Configuration or notes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name      String
  logo      String   // Logo URL (base64 or external)
  website   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CaseStudy {
  id          String   @id @default(cuid())
  title       String
  client      String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  coverImage  String?
  results     Json?    // Results metrics (e.g., %150 traffic increase)
  category    String   // SEO, Google Ads, Social Media, etc.
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  updatedAt   DateTime @updatedAt
}
